# =============================================================================
# HELPRS ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env.development.local, .env.testing.local, etc.
# and fill in the actual values for each environment.
# NEVER commit actual .env*.local files to version control!

NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Helprs

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres

# Stripe (TEST keys for dev/testing/staging, LIVE only for production)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_API_VERSION=2024-11-20.acacia

# Security (Generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Feature Flags
FEATURE_FLAGS_ENV=development
ENABLE_DEMO_FLAGS=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_ENABLED=false

# Logging
LOG_LEVEL=debug

# Storage Buckets
STORAGE_BUCKET_USER_UPLOADS=user-uploads-development
STORAGE_BUCKET_COMPANY_LOGOS=company-logos-development
STORAGE_BUCKET_DOCUMENTS=documents-development

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Sentry (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0
